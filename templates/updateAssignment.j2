<html>
<h1> Dinosaur Assignments</h1>
 [ <a href="/dinosaurs">Dinosaurs</a> | <a href="/species">Species</a> | <a href="employees">Employees</a> | <a href="visitors">Visitors</a> | <a href="dinosaurAssignments">Dinosaur Assignments</a> | <a href="locations">Locations</a> ]

<head>
	<title>Update Dinosaur Assignment</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div>
        <table border="1" cellpadding="5"> 
            <caption> <h3>Are you sure you want to update this assignment?</h3> </caption>
            <!-- Access data tuple passed from app.py -->
            {% if data %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}
                        
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{item[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>

    <!-- form to update a Assignment-->
    <form id="updateAssignment" action="/updateAssignment/{{data[0].ID}}" method="POST">
        <legend><strong>Update Dinosaur Assignment</strong></legend>
          <fieldset class="fields">
            <label> Name </label> <input type="text" id="name" name="name" value="{{data[0].Name}}" required>
            <label> Dinosaur </label> 
              <select name="dinosaur">
                <option value="{{data[0].Dinosaurs}}">{{data[0].Dinosaurs}}</option>
                {% for x in dino_data if x.name not in data[0].Dinosaurs %}
                  <option value="{{ x.species_name }}">{{ x.species_name }}</option>
                {% endfor %}
              </select>
            <label> Location </label> 
              <select name="location">
            	<option value="{{data[0].Location}}">{{data[0].Location}}</option>
                {% for x in locations if x.location_name not in data[0].Location %}
                    <option value="{{x.location_name}}">{{x.location_name}}</option>
                {% endfor %}
              </select>
	          <label>Assignment </label> <input class="form-control" type="text" name="description" required>
      </fieldset>
      <input class="btn btn-primary" type="submit" id="updateAssignment" name="updateAssignment" value="Update Dinosaur Assignment">
          <a href="/dinosaurAssignments" class="btn btn-default">Cancel</a>
	</form> 
</html>