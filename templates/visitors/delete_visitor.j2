<head>
	<title>Delete Visitor</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div>
        <table class="blueTable"> 
            <caption> <h3>Are you sure you want to delete this visitor?</h3> </caption>
            <!-- Access data tuple passed from app.py -->
            {% if data %}
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Location</th>
                        <th>Health Status</th>
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}
                        
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{item[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>

    <div id="delete">
    <!-- buttons to delete a Visitor-->
    <form id="deleteVisitor" action="/delete_visitor/{{data[0].ID}}" method="post">
          <input class="btn btn-primary" type="submit" id="Delete_Visitor" name="Delete_Visitor" value="Delete Visitor">
          <a href="/visitors" class="btn btn-default">Cancel</a>
	</form> 
</html>